@import 'nib'

red = #cc3d33

body, input {
  font: 14px Lucida Grande, sans-serif;
  color: #666;
}

body {
  background-color: #f4f4f2;
  border-top: solid 6px red;
  padding: 72px 16px;
  text-align: center;
}

input {
  font-family: Georgia, serif;
  border: solid 1px transparent;
  padding: 0.5em;
  outline: none;
  &:hover { border-color: #ccc; }
  &:focus { border-color: #000; }
}

a {
  text-decoration: none;
  color: red;
  &:hover, &:focus { text-decoration: underline; }
}

h1, h2, h3, h4, h5, h6 {
  color: #000;
}


// layout

#content {
  max-width: 953px;
  margin: 0 auto;
  text-align: left;

  h1 {
    font: 28px Georgia, serif;
    border-bottom: solid 1px #000;
    padding-bottom: 10px;
    padding-top: 8px;
    padding-left: 4px;
  }
  nav {
    float: left;
    margin: 0 5px 0 0;
    width: 140px;
    font-size: 11px;
    text-transform: uppercase;
    &, a {
      color: #999;
    }
    ul {
      margin: 0;
      padding: 0;
      li {
        border-top: solid 1px #ccc;
        a {
          display: inline-block;
          padding: 0.5em 0 0.5em 35px;
          background: url('/static/icons-interior.png') no-repeat -156px 3px;
        }
      }
      li:first-child { border-top: none; }
      for link, i in home download about npm docs blog community logos jobs {
        li.{link} a {
          background-position: -156px -24*i+3px;
        }
        li.{link} a:hover {
          background-position: -331px -24*i+3px;
          color: #000;
        }
        li.{link}.current a {
          background-position: 2px -24*i+3px;
          color: red;
          font-weight: bold;
        }
      }
    }
  }
  .profile #profile-name-link {
    margin-left: 4px;
  }
  .profile .profsub {
    margin:0;
    font-size:11px;
  }
  .profile .profsub a:first-child {
    border-right: 1px solid #999
    padding-right: 3px;
    margin-left: 4px;
  }

  aside.login {
    float: right;
    width: 220px;
    background: linear-gradient(top, hsla(0, 0%, 50%, 0.1), transparent);
    padding: 0.5em;
    .avatar {
      width: 25px;
      height: 25px;
      float: left;
    }
    .profile {
      margin-left: 30px;
    }
  }

  #page {
    margin-left 120px + 80px;
    margin-right: 220px + 40px;

    header {
      #npm-logo {
        text-indent: -999em;
        width: 200px;
        height: 78px;
        background: url('/static/npm.png') no-repeat;
        background-size: 200px 78px;
        border: 0;
        margin: -5px 0 0;
      }
      form input {
        font-size: 18px;
        width: 50%;
        float: right;
      }
    }
  }
}

#package {
  .row {
    padding:0.75em 0;
    border-top: solid 1px #ccc;
  }
  p.description {
    font: 18px Georgia, serif;
  }
  td.with-avatar {
    position: relative;
    padding-left: 30px;
    .avatar {
      position: absolute;
      top: 5px;
      left: 0;
      width: 25px;
      height: 25px;
    }
  }
  table.metadata {
    margin: 1em 0;
    width: 100%;
  }
  tr {
    border-top: solid 1px #ccc;
  }
  th, td {
    padding: 0.75em 0;
    vertical-align: baseline;
  }
  th {
    color: #000;
    font-weight: normal;
    text-align: left;
    width: 120px;
  }

  .details {
    ul.toc {
      padding: 0;
      margin-bottom: 0;
      font-size: 16px;
      li {
        display: inline-block;
        padding: 0.5em 32px 0.5em 16px;
        &:first-child {
          background-color: #fff;
        }
      }
    }

    section {
      padding: 16px;
      background-color: #fff;
      margin-right: -260px;

      &#readme {
        h1 { 
          font: 24px Lucida Grande, sans-serif ;
          border-bottom: solid 1px #ccc; /* not sure what color to use here, it doesn't appear to be specified in the spec */
          color: #000;
        }

        pre {
          font-family: Monaco, monospace;
          background-color: #f9f9f8;
          padding: 16px;
        }
      }
    }
  }
}
